        <url-pattern>/LogOutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>PrincipalConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>principal</web-resource-name>
            <description>Resources the principal can access</description>
            <url-pattern>/menu.jsp</url-pattern>
            <url-pattern>/percentage_per_gender.html</url-pattern>
            <url-pattern>/avg_fem_principal.html</url-pattern>
            <url-pattern>/young_stu_detail_principal.html</url-pattern>
            <url-pattern>/PerServlet.do</url-pattern>
            <url-pattern>/AvgAgePerGenServlet.do</url-pattern>
            <url-pattern>/YoungestStuDe.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>What the principal can access on the system</description>
            <role-name>principal</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>TeacherConstaint1</display-name>
        <web-resource-collection>
            <web-resource-name>teacher</web-resource-name>
            <description>Resources the teacher can access on the system</description>
            <url-pattern>/menu.jsp</url-pattern>
            <url-pattern>/add.html</url-pattern>
            <url-pattern>/get_stu_by_stuNum.html</url-pattern>
            <url-pattern>/viewAll.html</url-pattern>
            <url-pattern>/delete.html</url-pattern>
            <url-pattern>/get_num.html</url-pattern>
            <url-pattern>/AddStuServlet.do</url-pattern>
            <url-pattern>/DeleteStudentServlet.do</url-pattern>
            <url-pattern>/FindStudentServlet.do</url-pattern>
            <url-pattern>/GetStudentServlet.do</url-pattern>
            <url-pattern>/GetTotalStudentServlet.do</url-pattern>
            <url-pattern>/RemoveServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>What the teacher can do on the system</description>
            <role-name>teacher</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>teacher</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>principal</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
   
</web-app>
